<style>
    .favorite-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: none;
        border: none;
        font-size: 24px;
        color: white;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .favorite-btn:hover {
            transform: scale(1.1);
        }

        .favorite-btn.favorited i {
            color: red;
            font-weight: bold;
        }
</style>
<script>
    function toggleFavorite(recipeId, button) {
        fetch('/Home/Toggle', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ recipeId: recipeId }) // Send the recipeId as JSON
        })
            .then(response => response.json())  // Parse the JSON response
            .then(data => {
                if (data.isFavorited) {
                    button.classList.add("favorited");
                    button.querySelector("i").classList.add("fa-solid");
                    button.querySelector("i").classList.remove("fa-regular");
                } else {
                    button.classList.remove("favorited");
                    button.querySelector("i").classList.remove("fa-solid");
                    button.querySelector("i").classList.add("fa-regular");
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }
</script>

